{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "./src/**/*",
    "./types/jsx.d.ts"
  ],
  "exclude": [
    "./src/components/shared/**/test",
    "./src/components/**/test",
    "./src/**/test",
    "./src/test"
  ]
}
